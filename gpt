switch (getch())
{
    case KEY_UP:
        if (i > 0 && mat00[i - 1][j] == ".") {
            mat00[i][j] = temp;
            temp = mat00[i - 1][j];
            i--;
            system("cls");
            if (k % 2 == 0 && mat00[i][j] != "x")
                mat00[i][j] = "o";
            else if (k % 2 == 1 && mat00[i][j] != "o")
                mat00[i][j] = "x";
            drawBoard(mat00);
        }
        break;

    case KEY_DOWN:
        if (i < 2 && mat00[i + 1][j] == ".") {
            mat00[i][j] = temp;
            temp = mat00[i + 1][j];
            i++;
            system("cls");
            if (k % 2 == 0 && mat00[i][j] != "x")
                mat00[i][j] = "o";
            else if (k % 2 == 1 && mat00[i][j] != "o")
                mat00[i][j] = "x";
            drawBoard(mat00);
        }
        break;

    case KEY_LEFT:
        if (j > 0 && mat00[i][j - 1] == ".") {
            mat00[i][j] = temp;
            temp = mat00[i][j - 1];
            j--;
            system("cls");
            if (k % 2 == 0 && mat00[i][j] != "x")
                mat00[i][j] = "o";
            else if (k % 2 == 1 && mat00[i][j] != "o")
                mat00[i][j] = "x";
            drawBoard(mat00);
        }
        break;

    case KEY_RIGHT:
        if (j < 2 && mat00[i][j + 1] == ".") {
            mat00[i][j] = temp;
            temp = mat00[i][j + 1];
            j++;
            system("cls");
            if (k % 2 == 0 && mat00[i][j] != "x")
                mat00[i][j] = "o";
            else if (k % 2 == 1 && mat00[i][j] != "o")
                mat00[i][j] = "x";
            drawBoard(mat00);
        }
        break;

    // Other cases...
}
